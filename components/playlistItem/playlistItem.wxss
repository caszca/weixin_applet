/* components/playlistItem/playlistItem.wxss */
.content{
  display: flex;
  flex-direction: column;
  width: 100%;
}

.show{
  position: relative;
}

.playCount{
  position: absolute;
  bottom:12rpx;
  right:0;
  color: #fff;
  font-size: 28rpx;
  border-radius: 10rpx;
  padding: 0 10rpx;
  background-color: rgba(108, 101, 94);
}
.img{
  
  width: 100%;
  border-radius: 14rpx;
}

.description{
  font-size: 28rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}