/* components/videoDetailItem/index.wxss */
.item{
  display: flex;
  height: 160rpx;
  margin-top: 40rpx;
}

.img{
  position: relative;
}
.image{
  height: 100%;
  border-radius: 10rpx;
}
.icon{
  position: absolute;
  display: flex;
  align-items: center;
  font-size: 24rpx;
  font-weight: 500;
  bottom: 10rpx;
  right: 14rpx;
  height: 32rpx;
  color: rgba(227, 227, 231);
}
.iconImg{
  margin-right: 6rpx;
  height:80%;
}


.abstract{
  display: flex;
  flex-direction: column;
  justify-content:center;
  margin-left: 20rpx;
}

.title{
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.userName{
  margin-top: 10rpx;
  color: #999;
  font-size: 24rpx;
}

